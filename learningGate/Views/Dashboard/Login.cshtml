@using learningGate.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_LayoutAdminLogin";
}

<a href="#" class="text-nowrap logo-img text-center d-block py-3 w-100 bg-black mb-3" style="border-radius: 7px">
    <img src="~/client/images/logo.png" width="180" alt="">
</a>
@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"]</span>
    </div>
}
<form asp-action="Login" asp-controller="Dashboard">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="EmailAddress" class="control-label form-label"></label>
        <input asp-for="EmailAddress" class="form-control" aria-describedby="emailHelp">
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Password" class="control-labe form-labell"></label>
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @* <div class="d-flex align-items-center justify-content-between mb-4"> *@
    @*     <div class="form-check"> *@
    @*         <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked> *@
    @*         <label class="form-check-label text-dark" for="flexCheckChecked"> *@
    @*             Remeber this Device *@
    @*         </label> *@
    @*     </div> *@
    @*     $1$ <a class="text-primary fw-bold" href="./index.html">Forgot Password ?</a> #1# *@
    @* </div> *@
    <input class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2" type="submit" value="Sign In"/>
    <div class="d-flex align-items-center justify-content-center">
        <p class="fs-4 mb-0 fw-bold">New to us?</p>
        <a class="text-primary fw-bold ms-2" asp-controller="Account" asp-action="Register">Create an account</a>
    </div>
</form>