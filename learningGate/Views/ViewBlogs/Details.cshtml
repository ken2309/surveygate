@model learningGate.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<header class="site-header d-flex flex-column justify-content-center align-items-center">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center">

                <h2 class="mb-0">Detail post</h2>
            </div>

        </div>
    </div>
</header>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">@Model.Name</h5>
        <div class="mb-0">
             @Html.Raw(Model.Description)
        </div>
        <div class="timeline-desc fs-3 text-dark mt-n1 fw-semibold">Post by <a
            href="javascript:void(0)" class="text-primary d-block fw-normal">@Model.AuthorName</a>
        </div>
        </div>
        <a onclick="addFavorite(@Model.Id.ToString())" class="btn btn-secondary">Save</a>
    </div>
</div>

